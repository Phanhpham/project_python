<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edu_session_calendar" model="ir.ui.view">
        <field name="name">edu.session.calendar</field>
        <field name="model">edu.session</field>
        <field name="arch" type="xml">
            <calendar string="Lịch buổi học" 
                      date_start="start_date" 
                      date_stop="end_date" 
                      
                      mode="month" 
                      quick_create="False">
                <field name="name"/>
                <field name="course_id" filters="1"/>
                <field name="instructor_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_edu_session_kanban" model="ir.ui.view">
        <field name="name">edu.session.kanban</field>
        <field name="model">edu.session</field>
        <field name="arch" type="xml">
            <kanban default_group_by="course_id" class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="attendee_count"/>
                <field name="state"/>
                <!-- <field name="color"/> -->
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click shadow-sm border-left-primary">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title" style="font-size: 15px; color: #2C3E50;">
                                    <field name="name"/>
                                </strong>
                                <div class="text-muted small">
                                    <i class="fa fa-barcode"/> Mã: <field name="code"/>
                                </div>
                                <div class="mt-2">
                                    <i class="fa fa-users text-primary"/> 
                                    <strong> <field name="attendee_count"/> </strong> học viên
                                </div>
                                <div class="mt-2 text-right">
                                    <field name="state" widget="label_selection" 
                                           options="{'classes': {'draft': 'default', 'open': 'success', 'done': 'info', 'cancel': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_edu_session_tree" model="ir.ui.view">
        <field name="name">edu.session.tree</field>
        <field name="model">edu.session</field>
        <field name="arch" type="xml">
            <tree string="Lớp học">
                <field name="code"/>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="taken_seats" widget="progressbar"/>
                <field name="revenue" sum="Tổng doanh thu" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'open'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_edu_session_form" model="ir.ui.view">
        <field name="name">edu.session.form</field>
        <field name="model">edu.session</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Xác nhận" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_done" string="Kết thúc" type="object" invisible="state != 'open'" class="oe_highlight"/>
                    <button name="action_cancel" string="Hủy lớp" type="object" invisible="state not in ['draft', 'open']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="code"/></h1>
                        <h2><field name="name" placeholder="Tên buổi học" readonly="state == 'done'"/></h2>
                    </div>
                    <group>
                        <group string="THÔNG TIN">
                            <field name="course_id" readonly="state == 'done'"/>
                            <field name="instructor_id" readonly="state == 'done'"/>
                            <field name="classroom_id" readonly="state == 'done'"/>
                        </group>
                        <group string="TÍNH TOÁN">
                            <field name="start_date" readonly="state == 'done'"/>
                            <field name="duration" readonly="state == 'done'"/>
                            <field name="taken_seats" widget="progressbar"/>
                            <field name="revenue" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Học viên">
                            <field name="attendee_ids" readonly="state == 'done'"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_edu_session_pivot" model="ir.ui.view">
        <field name="name">edu.session.pivot.revenue</field>
        <field name="model">edu.session</field>
        <field name="arch" type="xml">
            <pivot string="Phân tích doanh thu">
                <field name="revenue" type="measure"/>
                <field name="course_id" type="row"/>
                <field name="instructor_id" type="row"/>
                <field name="start_date" type="col" interval="month"/>
            </pivot>
        </field>
    </record>

    <record id="view_edu_session_graph_bar" model="ir.ui.view">
        <field name="name">edu.session.graph.bar</field>
        <field name="model">edu.session</field>
        <field name="arch" type="xml">
            <graph string="So sánh số học viên theo Khóa học" type="bar">
                <field name="course_id" type="row"/>
                <field name="attendee_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_edu_session_search" model="ir.ui.view">
        <field name="name">edu.session.search</field>
        <field name="model">edu.session</field>
        <field name="arch" type="xml">
            <search string="Tìm lớp học">
                <field name="name" string="Tên lớp"/>
                <field name="code" string="Mã lớp"/>
                <field name="course_id"/>
                <field name="instructor_id"/>
                <filter string="Lớp khai giảng tuần này" name="this_week" domain="[('is_this_week','=',True)]" />
                <filter string="Doanh thu &gt; 10 triệu" name="revenue_gt_10m" domain="[('revenue', '&gt;', 10000000)]" />
                <group expand="0" string="Gom nhóm theo">
                    <filter string="Khóa học" name="group_by_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Giảng viên" name="group_instructor" context="{'group_by': 'instructor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_edu_session" model="ir.actions.act_window">
        <field name="name">Lớp học</field>
        <field name="res_model">edu.session</field>
        <field name="view_mode">kanban,calendar,tree,form,pivot,graph</field>
        <field name="search_view_id" ref="view_edu_session_search"/>
        <field name="context">{'search_default_group_by_course': 1}</field>
    </record>
</odoo>
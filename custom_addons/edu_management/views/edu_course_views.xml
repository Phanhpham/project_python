<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edu_course_search" model="ir.ui.view">
        <field name="name">edu.course.search</field>
        <field name="model">edu.course</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm khóa học">
                <field name="name"/>
                <field name="subject_id"/>
                <filter string="Đã lưu trữ (Archived)" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="view_edu_course_tree" model="ir.ui.view">
        <field name="name">edu.course.tree</field>
        <field name="model">edu.course</field>
        <field name="arch" type="xml">
            <tree string="Khóa học">
                <field name="name" string="Tên khóa học"/>
                <field name="subject_id" string="Môn học"/>
                <field name="responsible_id" string="Người phụ trách"/>
                <field name="level" string="Trình độ"/>
                <field name="active" widget="boolean_toggle" string="Hoạt động"/>
            </tree>
        </field>
    </record>

    <record id="view_edu_course_form" model="ir.ui.view">
        <field name="name">edu.course.form</field>
        <field name="model">edu.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sessions" type="object" class="oe_stat_button" icon="fa-university">
                            <field name="session_count" widget="statinfo" string="Lớp học"/>
                        </button>
                    </div>

                    <group>
                        <group string="Thông tin chung">
                            <field name="name"/>
                            <field name="tuition_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="subject_id"/>
                            <field name="level"/>
                        </group>
                        <group string="Phụ trách">
                            <field name="responsible_id"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Mô tả">
                            <field name="description" placeholder="Nhập mô tả khóa học..."/>
                        </page>
                        <page string="Danh sách lớp">
                            <field name="session_ids" readonly="1">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="instructor_id"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_edu_course" model="ir.actions.act_window">
        <field name="name">Khóa học</field>
        <field name="res_model">edu.course</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_edu_course_search"/>
        <field name="context">{'active_test': False}</field>
    </record>
</odoo>
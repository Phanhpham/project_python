<odoo>
    <record id="view_product_template_form_edu_inherit" model="ir.ui.view">
        <field name="name">product.template.form.edu.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="inside">
                <group string="Cấu hình giáo dục">
                    <field name="is_edu_fee"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
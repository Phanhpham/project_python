<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edu_classroom_tree" model="ir.ui.view">
        <field name="name">edu.classroom.tree</field>
        <field name="model">edu.classroom</field>
        <field name="arch" type="xml">
            <tree string="Danh sách phòng học" editable="bottom">
                <field name="name"/>
                <field name="capacity"/>
            </tree>
        </field>
    </record>

    <record id="action_edu_classroom" model="ir.actions.act_window">
        <field name="name">Phòng học</field>
        <field name="res_model">edu.classroom</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có phòng học nào. Hãy tạo mới để quản lý sức chứa!
            </p>
        </field>
    </record>

    <menuitem id="menu_edu_classroom" 
          name="Phòng học" 
          parent="menu_root" 
          action="action_edu_classroom" 
          sequence="30"/>
</odoo>